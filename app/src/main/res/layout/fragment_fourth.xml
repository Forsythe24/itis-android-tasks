            android:id="@+id/tv_1_screen_4"
            android:gravity="center"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_is_changeable_info"
            android:id="@+id/tv_2_screen_4"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_is_changeable_info"
            android:id="@+id/tv_3_screen_4"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
</FrameLayout>
